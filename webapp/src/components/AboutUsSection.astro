---
import { Image } from "astro:assets";
import { Button } from "$lib/components/ui/button";
import { Badge } from "$lib/components/ui/badge";
import SectionTitle from "$lib/components/common/SectionTitle.svelte";
import visionImage1 from "$lib/images/solution-shape1.png";
import visionImage2 from "$lib/images/solution-shape2.png";
import visionImage3 from "$lib/images/solution-shape3.png";
import visionImage4 from "$lib/images/solution.png";
import AboutBg1 from "$lib/components/svg/AboutBg1.astro";
import AboutBg2 from "$lib/components/svg/AboutBg2.astro";
import AboutBg3 from "$lib/components/svg/AboutBg3.astro";
import AboutBg4 from "$lib/components/svg/AboutBg4.astro";
---

<section
    class="section3 pb-40 bg-white overflow-hidden relative -mt-24 pt-[240px] pb-[150px] max-md:pb-[240px]"
>
    <svg
        viewBox="0 0 1440 181"
        fill="none"
        xmlns="http://www.w3.org/2000/svg"
        class="absolute inset-x-0 top-0 w-full block"
        data-v-baf90ddd=""
        ><mask id="path-1-inside-1_1086_7239" fill="white"
            ><path d="M0 0H1440V181H0V0Z"></path></mask
        ><path
            d="M0 0H1440V181H0V0Z"
            fill="url(#paint0_linear_1086_7239)"
            fill-opacity="0.22"></path><path
            d="M0 2H1440V-2H0V2Z"
            fill="url(#paint1_linear_1086_7239)"
            mask="url(#path-1-inside-1_1086_7239)"></path><defs
            ><linearGradient
                id="paint0_linear_1086_7239"
                x1="720"
                y1="0"
                x2="720"
                y2="181"
                gradientUnits="userSpaceOnUse"
                ><stop stop-color="#72b14a"></stop><stop
                    offset="1"
                    stop-color="#72b14a"
                    stop-opacity="0"></stop></linearGradient
            ><linearGradient
                id="paint1_linear_1086_7239"
                x1="0"
                y1="90.5"
                x2="1440"
                y2="90.5"
                gradientUnits="userSpaceOnUse"
                ><stop stop-color="#72b14a" stop-opacity="0"></stop><stop
                    offset="0.395"
                    stop-color="#72b14a"></stop><stop
                    offset="1"
                    stop-color="#72b14a"
                    stop-opacity="0"></stop></linearGradient
            ></defs
        ></svg
    >
    <div class="absolute top-0 max-w-[1612px] left-0 max-md:hidden">
        <AboutBg1 />
    </div>
    <div class="absolute top-0 max-w-[1612px] right-0 max-md:hidden">
        <AboutBg2 />
    </div>
    <div class="absolute top-0 max-w-[1612px] left-0 md:hidden">
        <AboutBg3 />
    </div>
    <div class="absolute top-0 max-w-[1612px] right-0 md:hidden">
        <AboutBg4 />
    </div>
    <div class="container relative z-10">
        <div
            class="grid grid-cols-2 max-md:grid-cols-1 gap-10 1xl:gap-x-24 items-end"
        >
            <div class="max-md:text-center">
                <div
                    class="max-md:justify-center flex items-center w-full mb-4 aos-init aos-animate"
                    data-aos="fade-up"
                >
                    <Badge
                        class="border border-primary-300 ring-2 ring-opacity-20 ring-primary-500 ring-primary"
                        variant="outline">About Us</Badge
                    >
                </div>
                <div>
                    <SectionTitle text="Who We" primaryColorText="Are?" />

                    <p
                        class="mb-10 text-xl max-md:text-center"
                        data-aos="fade-up"
                    >
                        Improwised Technologies, founded in 2011, is a top IT
                        company specializing in scalable, data-intensive,
                        cloud-native applications. We're committed to delivering
                        advanced, reliable software solutions.
                    </p>
                </div>

                <ul
                    class="mb-6 [&>*:not(:last-child)]:mb-6 max-lg:[&>*:not(:last-child)]:mb-4"
                >
                    <li class="flex items-center gap-x-2 max-md:justify-center">
                        <span
                            class="relative w-5 h-5 rounded-full bg-primary dark:bg-dark-200 shadow-nav -icon flex item-center justify-center"
                            ><svg
                                class="svg-inline--fa fa-check fa-solid fa-check text-paragraph dark:text-primary absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2"
                                aria-hidden="true"
                                focusable="false"
                                data-prefix="fas"
                                data-icon="check"
                                role="img"
                                xmlns="http://www.w3.org/2000/svg"
                                viewBox="0 0 448 512"
                                ><path
                                    class=""
                                    fill="white"
                                    d="M438.6 105.4c12.5 12.5 12.5 32.8 0 45.3l-256 256c-12.5 12.5-32.8 12.5-45.3 0l-128-128c-12.5-12.5-12.5-32.8 0-45.3s32.8-12.5 45.3 0L160 338.7 393.4 105.4c12.5-12.5 32.8-12.5 45.3 0z"
                                ></path></svg
                            ></span
                        ><span class="dark:text-white font-medium"
                            >Expertise in Cloud-Native Solutions</span
                        >
                    </li><li
                        class="flex items-center gap-x-2 max-md:justify-center"
                    >
                        <span
                            class="relative w-5 h-5 rounded-full bg-primary dark:bg-dark-200 shadow-nav -icon flex item-center justify-center"
                            ><svg
                                class="svg-inline--fa fa-check fa-solid fa-check text-paragraph dark:text-primary absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2"
                                aria-hidden="true"
                                focusable="false"
                                data-prefix="fas"
                                data-icon="check"
                                role="img"
                                xmlns="http://www.w3.org/2000/svg"
                                viewBox="0 0 448 512"
                                ><path
                                    class=""
                                    fill="white"
                                    d="M438.6 105.4c12.5 12.5 12.5 32.8 0 45.3l-256 256c-12.5 12.5-32.8 12.5-45.3 0l-128-128c-12.5-12.5-12.5-32.8 0-45.3s32.8-12.5 45.3 0L160 338.7 393.4 105.4c12.5-12.5 32.8-12.5 45.3 0z"
                                ></path></svg
                            ></span
                        ><span class="dark:text-white font-medium"
                            > Data-Driven Approach</span
                        >
                    </li><li
                        class="flex items-center gap-x-2 max-md:justify-center"
                    >
                        <span
                            class="relative w-5 h-5 rounded-full bg-primary dark:bg-dark-200 shadow-nav -icon flex item-center justify-center"
                            ><svg
                                class="svg-inline--fa fa-check fa-solid fa-check text-paragraph dark:text-primary absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2"
                                aria-hidden="true"
                                focusable="false"
                                data-prefix="fas"
                                data-icon="check"
                                role="img"
                                xmlns="http://www.w3.org/2000/svg"
                                viewBox="0 0 448 512"
                                ><path
                                    class=""
                                    fill="white"
                                    d="M438.6 105.4c12.5 12.5 12.5 32.8 0 45.3l-256 256c-12.5 12.5-32.8 12.5-45.3 0l-128-128c-12.5-12.5-12.5-32.8 0-45.3s32.8-12.5 45.3 0L160 338.7 393.4 105.4c12.5-12.5 32.8-12.5 45.3 0z"
                                ></path></svg
                            ></span
                        ><span class="dark:text-white font-medium"
                            >Proven Reliability</span
                        >
                    </li>
                </ul>
                <Button href="#" class="btn">
                    Start Your Journey
                </Button>
            </div>

            <div class="relative pt-150 lg:py-150 lg:px-150">
                <div
                    class="w-[250px] lg:w-[300px] aspect-video relative mx-auto"
                >
                    <Image
                        alt="vision image"
                        data-nuxt-img=""
                        sizes="1000px"
                        src={visionImage4}
                    />
                    <div
                        class="absolute left-10 max-md:-top-[30px] -top-[130px] lg:-top-[185px] lg:left-15 right-auto bottom-auto w-[250px] h-[150px] lg:w-[280px] lg:h-[180px] xl:w-[320px] xl:h-[230px]"
                        data-aos="zoom-out"
                    >
                        <Image
                            alt="vision image"
                            data-nuxt-img=""
                            sizes="1000px"
                            src={visionImage1}
                            class="w-full"
                        />
                    </div><div
                        class="absolute max-md:top-9 right-12 max-md:top-[145px] top-12 lg:right-20 left-auto bottom-auto w-[280px] h-[190px] lg:w-[320px] lg:h-[230px] xl:w-[368px] xl:h-[280px]"
                        data-aos="zoom-out"
                    >
                        <Image
                            alt="vision image"
                            data-nuxt-img=""
                            sizes="1000px"
                            src={visionImage2}
                            class="w-full"
                        />
                    </div><div
                        class="absolute left-[175px] max-md:-bottom-[135px] -bottom-[70px] lg:-bottom-[86px] lg:left-[200px] right-auto top-auto w-[150px] lg:w-[170px] aspect-video"
                        data-aos="zoom-out"
                    >
                        <Image
                            alt="vision image"
                            data-nuxt-img=""
                            sizes="1000px"
                            src={visionImage3}
                            class="w-full"
                        />
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

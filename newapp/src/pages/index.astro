---
import { getCollection } from 'astro:content';
import Layout from "$lib/layouts/Layout.astro";
import HeroSection from "$lib/components/HeroSection.astro";
import PlatformEngServiceSection from "$lib/components/PlatformEngServiceSection.astro";
import ServiceSection from "$lib/components/ServiceSection.astro";
import AboutusSection from "$lib/components/AboutusSection.astro";
import CTASection from "$lib/components/CTASection.astro";
import TestimonialsSection from "$lib/components/TestimonialsSection.astro";
import CaseStudiesSection from "$lib/components/CaseStudiesSection.astro";
import TechResultSection from "$lib/components/TechResultSection.astro";
import TechSection from "$lib/components/TechSection.astro";


const [{ data : {seoTitle, seoDescription}}] = await getCollection('homepage');
---
<Layout title={seoTitle} description={seoDescription}>
	<main class="main-content">
		<HeroSection />
		<PlatformEngServiceSection />
		<ServiceSection />
		<AboutusSection />
		<TechSection />
		<TestimonialsSection />
		<TechResultSection />
		<CaseStudiesSection />
		<CTASection />
	</main>
</Layout>

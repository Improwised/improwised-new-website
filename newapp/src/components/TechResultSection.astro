---
import { Image } from "astro:assets";
import SectionTitle from "$lib/components/common/SectionTitle.svelte";
import FullTechMobile from "$lib/images/tech/FullTechMobile.svg";
import FullTech from "$lib/images/tech/FullTech.svg";
---

<section class="section bg-white overflow-hidden relative pt-28 pb-10 md:py-40 darker-bg">
    <div class="container">
        <div
            class="mb-12 text-center mx-auto flex max-w-3xl flex-col items-center justify-center"
        >
            <SectionTitle text="Tech That" primaryColorText="Drives Results" />
            <p class="text-para">
                We harness the power of modern technologies to create scalable,
                secure solutions. Our tech stack ensures high performance.
            </p>
        </div>
        <div class="flex lg:hidden justify-center items-center relative">
            <Image src={FullTechMobile} alt="Tech Stack" class="" />
        </div>
        <div class="lg:flex hidden justify-center items-center relative">
            <Image src={FullTech} alt="Tech Stack" class="" />
        </div>
    </div>
    <svg
        class="absolute top-0 inset-x-0 pointer-events-none"
        viewBox="0 0 1017 181"
        fill="none"
        xmlns="http://www.w3.org/2000/svg"
        ><g opacity="0.5"
            ><mask id="path-1-inside-1_846_160841" fill="white"
                ><path d="M0 0H1017V181H0V0Z"></path></mask
            ><path
                d="M0 0H1017V181H0V0Z"
                fill="url(#paint0_radial_846_160841)"
                fill-opacity="0.22"></path><path
                d="M0 2H1017V-2H0V2Z"
                fill="url(#paint1_linear_846_160841)"
                mask="url(#path-1-inside-1_846_160841)"></path></g
        ><defs
            ><radialGradient
                id="paint0_radial_846_160841"
                cx="0"
                cy="0"
                r="1"
                gradientUnits="userSpaceOnUse"
                gradientTransform="translate(508.999 19.5) rotate(90.177) scale(161.501 509.002)"
                ><stop stop-color="#00afdb"></stop><stop
                    offset="1"
                    stop-color="#00afdb"
                    stop-opacity="0"></stop></radialGradient
            ><linearGradient
                id="paint1_linear_846_160841"
                x1="10.9784"
                y1="91"
                x2="1017"
                y2="90.502"
                gradientUnits="userSpaceOnUse"
                ><stop stop-color="#00afdb" stop-opacity="0"></stop><stop
                    offset="0.395"
                    stop-color="#00afdb"></stop><stop
                    offset="1"
                    stop-color="#00afdb"
                    stop-opacity="0"></stop></linearGradient
            ></defs
        ></svg
    >

    <div
        id="v-0-3"
        class="absolute inset-x-0 top-0 h-5 lg:h-24 w-full pointer-events-none"
    >
        <div data-generated="true" id="tsparticlesCanvas"></div>
    </div>
</section>

<script src="../scripts/particles.js"></script>
<script>
    window.addEventListener("DOMContentLoaded", () => {
        tsParticles.load({
            id: "tsparticlesCanvas",
            options: {
                fullScreen: {
                    enable: false,
                },
                shape: { type: "circle" },

                fpsLimit: 60,
                particles: {
                    number: {
                        value: 50,
                    },
                    //   links: {
                    //     enable: true,
                    //     distance: 50
                    //   },
                    move: {
                        enable: true,
                        speed: 0.5,
                        outModes: {
                            default: "bounce",
                        },
                    },
                    color: { value: "#00afdb" }, // Red color for particles
                    size: {
                        value: 1,
                    },
                },
            },
        });
    });
</script>

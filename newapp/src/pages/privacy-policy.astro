---
import { getCollection } from "astro:content";
import Layout from "$lib/layouts/Layout.astro";
import backImage from "$lib/images/blogs/back.svg";
import bg2Image from "$lib/images/blogs/bg2.svg";
import Sidebar from "$lib/components/Sidebar.astro";

// Meta title and description
const seoContents = await getCollection('seocontent');
const [{title, description}] = (seoContents[0].data).filter((content) => content.slug == "privacy-policy")

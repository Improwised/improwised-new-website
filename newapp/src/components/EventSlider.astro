---
import { getCollection } from "astro:content";
import { Image } from "astro:assets";
import * as Card from "$lib/components/ui/card";

const eventData = await getCollection("events", ({ data }) => {
  return data;
});

const { marqueeClass} = Astro.props
---
{
  eventData.map(({ data: { events } }) =>
  events.map(
      (events, index) =>


    <Card.Root
    class={`eventCard1 relative bg-white flex md:max-w-2xl max-w-xl shrink-0 snap-start snap-always scroll-m-5 flex-col justify-between transition-all hover:shadow-lg md:motion-safe:${marqueeClass}`}
      >
    <div
      class="flex md:gap-6 gap-4 md:p-6 p-4 rounded-lg shadow-md"
    >

      <div class="shrink-0">
        <Image
         src={events.image}
          class="md:h-60 md:w-60 h-40 w-40 object-cover"
          alt="cubecon 2024"
          loading="lazy"
          decoding="async"
        />
      </div>

      <div class="flex flex-col justify-between">
        <!-- Testimonial Content -->
        <blockquote
          class="text-sm md:text-xl"
        >
        {events.quote}
        </blockquote>

        <div class="mt-6">
          <h2
            class="font-semibold md:text-lg text-sm"
          >
            {events.title}
          </h2>
          <p class="md:text-sm text-xs text-gray-600">
            {events.date.toDateString()}
          </p>
        </div>
      </div>
    </div>
  </Card.Root>
    ))}


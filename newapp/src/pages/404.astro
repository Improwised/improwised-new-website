---
import { getCollection } from "astro:content";
import Layout from "$lib/layouts/Layout.astro";
import { Image } from "astro:assets";
import pageNotFoundImage from "$lib/images/page-not-found.png";
const [
  {
    data: { seoTitle, seoDescription },
  },
] = await getCollection("pageNotFound");
---

<Layout title={seoTitle} description={seoDescription}>
  <main class="main-content">
    <section
      class="section1 flex flex-col items-center justify-center text-center px-6 relative pt-30 pb-10"
    >
      <Image alt="feature" class="" width={800} src={pageNotFoundImage} />
      <p class="small-text font-roboto md:text-para text-third-color">The page you are looking for does not exist. Go back to previous page.</p>
    </section>
  </main>
</Layout>

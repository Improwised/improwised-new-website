---
import { Image } from "astro:assets";
import SectionTitle from "$lib/components/common/SectionTitle.svelte";

import TechStackComplete from "$lib/images/TechStackComplete.svg";

// Import SVG line connectors
import leftLine1 from "$lib/images/tech/leftLine1.svg";
import leftLine2 from "$lib/images/tech/leftLine2.svg";
import leftLine3 from "$lib/images/tech/leftLine3.svg";
import leftLine4 from "$lib/images/tech/leftLine4.svg";

import leftLine5 from "$lib/images/tech/leftLine5.svg";
import leftLine6 from "$lib/images/tech/leftLine6.svg";
import Check from "lucide-svelte/icons/check";
import rightLine from "$lib/images/tech/rightLine.svg";

// Import tech logos
import tech1 from "$lib/images/tech/tech1.png";
import tech2 from "$lib/images/tech/tech2.png";
import tools1 from "$lib/images/tech/tools1.png";
import tools2 from "$lib/images/tech/tools2.png";
import tools3 from "$lib/images/tech/tools3.png";
import db1 from "$lib/images/tech/db1.png";
import db2 from "$lib/images/tech/db2.png";
import db3 from "$lib/images/tech/db3.png";
import db4 from "$lib/images/tech/db4.png";
import backend1 from "$lib/images/tech/backend1.png";
import backend2 from "$lib/images/tech/backend2.png";
import frontend1 from "$lib/images/tech/frontend1.png";
import frontend2 from "$lib/images/tech/frontend2.png";
import cl1 from "$lib/images/tech/cl1.png";
import cl2 from "$lib/images/tech/cl2.png";
import cl3 from "$lib/images/tech/cl3.png";
---

<section class="section bg-white overflow-hidden relative pt-40 pb-20">
    <div class="container">
        <!-- Section Title -->
        <div
            class="mb-12 text-center mx-auto flex max-w-3xl flex-col items-center justify-center"
        >
            <SectionTitle text="Tech That" primaryColorText="Drives Results" />
            <p class="text-para">
                We harness the power of modern technologies to create scalable,
                secure solutions. Our tech stack ensures high performance.
            </p>
        </div>

        <!-- Tech Stack Container -->
        <div class="flex gap-48 justify-center items-center relative">
            <!-- Left Side (Tech Categories + Lines) -->
            <div class="flex flex-col relative">
                <!-- Cloud Provider -->
                <div class="flex items-center justify-start relative">
                    <div
                        class="flex items-center gap-3 px-2 py-2 bg-[#F0F0F0] rounded-full mb-2 relative w-[250px]"
                    >
                        <div class="icon-container flex">
                            <Image
                                src={cl1}
                                alt="Node.js"
                                class="profile-img"
                            />
                            <Image src={cl2} alt="Python" class="profile-img" />
                            <Image
                                src={cl3}
                                alt="Node.js"
                                class="profile-img"
                            />
                        </div>
                        <span class="font-manrope font-medium text-[18px]"
                            >Cloud Provider</span
                        >
                    </div>
                    <Image
                        src={leftLine1}
                        alt="Connector"
                        class="absolute left-full h-auto top-[40%]"
                    />
                </div>

                <!-- Frontend -->
                <div class="flex items-center justify-start relative">
                    <div
                        class="flex items-center gap-3 px-2 py-2 bg-[#F0F0F0] rounded-full mb-2 relative w-full rounded-full"
                    >
                        <div class="icon-container flex">
                            <Image
                                src={frontend1}
                                alt="Angular"
                                class="profile-img"
                            />
                            <Image
                                src={frontend2}
                                alt="Bootstrap"
                                class="profile-img"
                            />
                        </div>
                        <span class="font-manrope font-medium text-[18px]"
                            >Frontend</span
                        >
                    </div>
                    <Image
                        src={leftLine2}
                        alt="Connector"
                        class="absolute left-full h-auto absolute top-[40%]"
                    />
                </div>

                <!-- Backend -->
                <div class="flex items-center justify-start relative">
                    <div
                        class="flex items-center gap-3 px-2 py-2 bg-[#F0F0F0] rounded-full mb-2 relative w-full rounded-full"
                    >
                        <div class="icon-container flex">
                            <Image
                                src={backend1}
                                alt="Node.js"
                                class="profile-img"
                            />
                            <Image
                                src={backend2}
                                alt="Python"
                                class="profile-img"
                            />
                        </div>
                        <span class="font-manrope font-medium text-[20px]"
                            >Backend</span
                        >
                    </div>
                    <Image
                        src={leftLine3}
                        alt="Connector"
                        class="absolute left-full h-auto absolute top-[38%]"
                    />
                </div>
                <div class="flex items-center justify-start relative">
                    <div
                        class="flex items-center gap-3 px-2 py-2 bg-[#F0F0F0] rounded-full mb-2 relative w-full rounded-full"
                    >
                        <div class="icon-container flex">
                            <Image
                                src={db1}
                                alt="Node.js"
                                class="profile-img"
                            />
                            <Image src={db2} alt="Python" class="profile-img" />
                            <Image
                                src={db3}
                                alt="Node.js"
                                class="profile-img"
                            />
                            <Image src={db4} alt="Python" class="profile-img" />
                        </div>
                        <span class="font-manrope font-medium text-[20px]"
                            >Database</span
                        >
                    </div>
                    <Image
                        src={leftLine4}
                        alt="Connector"
                        class="absolute left-full h-auto absolute top-[-20%]"
                    />
                </div>
                <div class="flex items-center justify-start relative">
                    <div
                        class="flex items-center gap-3 px-2 py-2 bg-[#F0F0F0] rounded-full mb-2 relative w-full rounded-full"
                    >
                        <div class="icon-container flex">
                            <Image
                                src={tools1}
                                alt="tools1"
                                class="profile-img"
                            />
                            <Image
                                src={tools2}
                                alt="tools2"
                                class="profile-img"
                            />
                            <Image
                                src={tools3}
                                alt="tools3"
                                class="profile-img"
                            />
                        </div>
                        <span class="font-manrope font-medium text-[20px]"
                            >Tools</span
                        >
                    </div>
                    <Image
                        src={leftLine5}
                        alt="Connector"
                        class="absolute left-full h-auto absolute top-[-50%]"
                    />
                </div>
                <div class="flex items-center justify-start relative">
                    <div
                        class="flex items-center gap-3 px-2 py-2 bg-[#F0F0F0] rounded-full mb-2 relative w-full rounded-full"
                    >
                        <div class="icon-container flex">
                            <Image
                                src={tech1}
                                alt="tech1"
                                class="profile-img"
                            />
                            <Image
                                src={tech2}
                                alt="tech2"
                                class="profile-img"
                            />
                        </div>
                        <span class="font-manrope font-medium text-[20px]"
                            >Technology</span
                        >
                    </div>
                    <Image
                        src={leftLine6}
                        alt="Connector"
                        class="absolute left-full h-auto absolute top-[-110%]"
                    />
                </div>
            </div>

            <!-- Center Image -->
            <div class="relative flex items-center h-full">
                <Image
                    src={TechStackComplete}
                    alt="Tech Stack"
                    class="max-w-lg"
                />
            </div>

            <!-- Right Side (More Tech Categories + Lines) -->
            <div class="flex flex-col relative mt-10">
                <Image
                    src={rightLine}
                    alt=""
                    class="absolute right-[87%] h-auto absolute top-[15%]"
                />

                <!-- Database -->

                <div class="flex items-center justify-end relative">
                    <div
                        class="flex items-center gap-3 px-2 py-2 bg-[#009DC9] rounded-full mb-2 relative w-full bg-[#009DC9] rounded-full"
                    >
                        <div class="icon-container flex">
                            <span
                                class="text-[#009DC9] bg-white rounded-full p-1"
                            >
                                <Check
                                    width="14"
                                    height="14"
                                    astro-icon="social/linkedin"
                                />
                            </span>
                        </div>
                        <span
                            class="font-manrope font-medium text-[20px] text-white"
                            >Streamlined efficiency</span
                        >
                    </div>
                    <!-- <Image src={rightLine1} alt="Connector" class="absolute right-full h-auto absolute top-[40%]" /> -->
                </div>

                <!-- Tools -->

                <div class="flex items-center justify-start relative">
                    <div
                        class="flex items-center gap-3 px-2 py-2 bg-[#009DC9] rounded-full mb-2 relative w-full rounded-full"
                    >
                        <div class="icon-container flex">
                            <span
                                class="text-[#009DC9] bg-white rounded-full p-1"
                            >
                                <Check
                                    width="14"
                                    height="14"
                                    astro-icon="social/linkedin"
                                />
                            </span>
                        </div>
                        <span
                            class="font-manrope font-medium text-[20px] text-white"
                            >Scalable growth</span
                        >
                    </div>
                    <!-- <Image src={rightLine2} alt="Connector" class="absolute right-full h-auto absolute top-[40%]" /> -->
                </div>

                <!-- Technology -->
                <div class="flex items-center justify-start relative">
                    <div
                        class="flex items-center gap-3 px-2 py-2 bg-[#009DC9] rounded-full mb-2 relative w-full rounded-full"
                    >
                        <div class="icon-container flex">
                            <span
                                class="text-[#009DC9] bg-white rounded-full p-1"
                            >
                                <Check
                                    width="14"
                                    height="14"
                                    astro-icon="social/linkedin"
                                />
                            </span>
                        </div>
                        <span
                            class="font-manrope font-medium text-[20px] text-white"
                            >Enhanced performance</span
                        >
                    </div>
                    <!-- <Image src={rightLine3} alt="Connector" class="absolute right-full h-auto absolute top-[-10%]" /> -->
                </div>
                <div class="flex items-center justify-start relative">
                    <div
                        class="flex items-center gap-3 px-2 py-2 bg-[#009DC9] rounded-full mb-2 relative w-full rounded-full"
                    >
                        <div class="icon-container flex">
                            <span
                                class="text-[#009DC9] bg-white rounded-full p-1"
                            >
                                <Check
                                    width="14"
                                    height="14"
                                    astro-icon="social/linkedin"
                                />
                            </span>
                        </div>
                        <span
                            class="font-manrope font-medium text-[20px] text-white"
                            >Cost savings</span
                        >
                    </div>
                    <!-- <Image src={rightLine4} alt="Connector" class="absolute right-full h-auto absolute top-[-100%]" /> -->
                </div>
            </div>
        </div>
    </div>
    <svg
        class="absolute top-0 inset-x-0 pointer-events-none"
        viewBox="0 0 1017 181"
        fill="none"
        xmlns="http://www.w3.org/2000/svg"
        ><g opacity="0.5"
            ><mask id="path-1-inside-1_846_160841" fill="white"
                ><path d="M0 0H1017V181H0V0Z"></path></mask
            ><path
                d="M0 0H1017V181H0V0Z"
                fill="url(#paint0_radial_846_160841)"
                fill-opacity="0.22"></path><path
                d="M0 2H1017V-2H0V2Z"
                fill="url(#paint1_linear_846_160841)"
                mask="url(#path-1-inside-1_846_160841)"></path></g
        ><defs
            ><radialGradient
                id="paint0_radial_846_160841"
                cx="0"
                cy="0"
                r="1"
                gradientUnits="userSpaceOnUse"
                gradientTransform="translate(508.999 19.5) rotate(90.177) scale(161.501 509.002)"
                ><stop stop-color="#00afdb"></stop><stop
                    offset="1"
                    stop-color="#00afdb"
                    stop-opacity="0"></stop></radialGradient
            ><linearGradient
                id="paint1_linear_846_160841"
                x1="10.9784"
                y1="91"
                x2="1017"
                y2="90.502"
                gradientUnits="userSpaceOnUse"
                ><stop stop-color="#00afdb" stop-opacity="0"></stop><stop
                    offset="0.395"
                    stop-color="#00afdb"></stop><stop
                    offset="1"
                    stop-color="#00afdb"
                    stop-opacity="0"></stop></linearGradient
            ></defs
        ></svg
    >

    <div
        id="v-0-3"
        class="absolute inset-x-0 top-0 h-10 lg:h-24 w-full pointer-events-none"
    >
        <div data-generated="true" id="tsparticlesCanvas"></div>
    </div>
</section>

<script src="../scripts/particles.js"></script>
<script>
    window.addEventListener("DOMContentLoaded", () => {
        tsParticles.load({
            id: "tsparticlesCanvas",
            options: {
                fullScreen: {
                    enable: false,
                },
                shape: { type: "circle" },

                fpsLimit: 60,
                particles: {
                    number: {
                        value: 50,
                    },
                    //   links: {
                    //     enable: true,
                    //     distance: 50
                    //   },
                    move: {
                        enable: true,
                        speed: 0.5,
                        outModes: {
                            default: "bounce",
                        },
                    },
                    color: { value: "#00afdb" }, // Red color for particles
                    size: {
                        value: 1,
                    },
                },
            },
        });
    });
</script>

<style>
    .profile-img:first-child {
        @apply w-8 h-8 rounded-full border-2 border-white  transition-all duration-300 ring-2 ring-white;
        margin-left: 5px; /* Ensures the first element doesn't have negative margin */
    }

    .profile-img:not(:first-child) {
        @apply w-8 h-8 rounded-full border-2 border-white  transition-all duration-300 ring-2 ring-white;
        margin-left: -0.75rem;
    }

    .profile-img:hover {
        @apply scale-125 z-10 ring-sky-200;
    }
</style>

---
import "$lib/styles/global.css";

import BaseHead from "$lib/components/BaseHead.astro";
import JsonSchema from "$lib/components/JsonSchema.astro";
import Header from "$lib/components/Header.astro";
import Footer from "$lib/components/Footer.astro";
import { LD_JSON_DATA } from "../consts";
const { title, description, faqs, articleSchema } = Astro.props;

---
<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
		{ articleSchema && <JsonSchema faqs={faqs} articleSchema={articleSchema} />}
		<!-- LD JSON Data -->
		<script is:inline type="application/ld+json" set:html={JSON.stringify(LD_JSON_DATA)}></script>
		<script is:inline>
			const theme = localStorage.getItem("theme")
			?? (window.matchMedia("(prefers-color-scheme: dark)").matches ? "dark" : "light");
			if (theme === "dark") {
			document.documentElement.classList.add("dark");
			} else {
			document.documentElement.classList.remove("dark");
			}
		</script>
	</head>
	<body>
		<Header />
		<main>
			<slot />
		</main>
		<Footer />
		<script src="../scripts/custom.js"></script>
		<script src="https://www.googletagmanager.com/gtag/js?id=G-33PP6GNTHT"></script>
		<script src="../scripts/google-tag.js"></script>
	</body>
</html>


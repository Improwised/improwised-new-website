---
import { type CollectionEntry, getCollection, render } from "astro:content";
import Layout from "$lib/layouts/Layout.astro";
import { BASE_URL } from "$lib/consts";
import { Badge } from "$lib/components/ui/badge";
import CTASection from "$lib/components/CTASection.astro";
import BlogContent from "$lib/components/BlogContent.astro";
import { CircleUserRound } from "lucide-svelte";
import * as Card from "$lib/components/ui/card";
import { Image } from "astro:assets";
import { formatDate } from "$lib/utils";
import Sidebar from "$lib/components/Sidebar.astro";
import { Linkedin } from "lucide-svelte/icons";
import FAQs from "$lib/components/FAQs.astro";

export async function getStaticPaths() {
  const blogs = await getCollection("blogs");
  return blogs.map((blog) => ({
    params: { slug: blog.id },
    props: blog,
  }));
}
type Props = CollectionEntry<"blogs">;

const blog = Astro.props;

const { Content } = await render(blog);

// Recommended blogs
const allBlogs = await getCollection("blogs");
const filteredBlogs = allBlogs.filter((b) => b.id !== blog.id);

// Sort by publishDate (latest first)
const sortedBlogs = filteredBlogs.sort(
  (a, b) =>
    new Date(b.data.publishDate).getTime() -
    new Date(a.data.publishDate).getTime()
);

// Get the latest 3 blogs
const recommendedBlogs = sortedBlogs.slice(0, 3);

// Meta title and description
const blogs = await getCollection("blogs");
const [{ data }] = blogs.filter(
  (blog) => blog.data.slug === Astro.url.pathname.split("/").at(-2)
);

const url: string[] = Astro.url.pathname.split("/");

const [{ data: author }] = await getCollection(
  "authors",
  (author) => author.data.title === blog.data.author
);

const authors = await getCollection("authors");

let articleSchema = {};

if (data.articleSchema) {
  console.log("data slug -----", data.slug);

  articleSchema = {
    ...data.articleSchema,
    url: data.slug,
    headline: data.title,
    description: data.description,
    author: data.author,
    contributor: data?.contributor,
    publishedDate: data.publishDate,
    keywords: data.tags,
  };
}

let contributor = null;
if (data.contributor) {
    [contributor] = await getCollection("authors", (author) => author.data.title === blog.data.contributor)
    
}
---

<Layout
  title={data.seoTitle}
  description={data.seoDescription}
  faqs={data?.faqs}
  articleSchema={articleSchema}
>
  <main class="main-content">
    <section
      id="section1"
      class="section1 text-left py-40 px-6 bg-blog-details relative pt-[30%] md:pb-40 lg:pt-[12%]"
    >
      <!-- Main Heading -->
      <div class="container max-md:px-0 flex flex-col gap-3">
        <p
          class="font-manrope text-[#737373] uppercase font-extra-bold text-left text-[16px] leading-[24px] tracking-widest"
        >
          {formatDate(blog.data.publishDate)}
        </p>

        <h1
          class="font-manrope text-main-heading-color max-md:text-left main-heading-small md:main-heading"
        >
          {blog.data.title}
        </h1>

        <div class="flex flex-col lg:flex-row gap-6 mt-4">
          <!-- Author Info -->
          <div class="flex items-center gap-8">
            <div>
              <Image
                alt="feature"
                class="rounded-full border aspect-square object-cover object-top"
                width={56}
                height={56}
                src={author.image}
              />
            </div>
            <p
              class="font-semibold text-fifth-color small-text md:text-[18px] tracking-tight"
            >
              By {blog.data.author}
              <br />
              <span
                class="font-normal text-fourth-color text-[14px] md:text-[16px] md:leading-[18px] tracking-tight"
              >
                Improwised Technologies Pvt. Ltd.
              </span>
            </p>
          </div>
          <!-- Contributor Info -->
          {
            contributor && (
              <div class="flex items-center gap-8">
                <div>
                  <Image
                    alt="feature"
                    class="rounded-full border aspect-square object-cover object-top"
                    width={56}
                    height={56}
                    src={contributor.data.image}
                  />
                </div>
                <p class="font-semibold text-fifth-color small-text md:text-[18px] tracking-tight">
                  By {contributor.data.title}
                  <br />
                  <span class="font-normal text-fourth-color text-[14px] md:text-[16px] md:leading-[18px] tracking-tight">
                    Improwised Technologies Pvt. Ltd.
                  </span>
                </p>
              </div>
            )
          }
          <!-- Will do in next phase <ShareDropdown client:load /> -->
        </div>
      </div>
    </section>

    <section class="pt-20 pb-10 section-bg">
      <div
        class="blog-detail relative container grid grid-cols-1 lg:grid-cols-[400px_1fr] gap-6"
      >
        {
          url.includes("blog") && url.at(-2) !== "blog" && (
            <Sidebar insideMdx="inside" class="h-full" />
          )
        }
        <div class="overflow-x-hidden">
          <div class="no-inherit">
            <BlogContent blog={blog} />
          </div>
          <!-- faqs -->
          {data.faqs && <FAQs faqs={data.faqs} isBlogFaqs={true} />}
          <!-- author details -->
          <div
            class="author-details mt-12 border p-6 rounded-xl flex flex-col gap-4"
          >
            <div class="flex gap-8">
              <div>
                <Image
                  alt="feature"
                  class="rounded-full border aspect-square object-cover object-top"
                  width={56}
                  height={56}
                  src={author.image}
                />
              </div>
              <div class="">
                <p>Written by</p>
                <h5 class="">{author.title}</h5>
              </div>
            </div>
            <div>
              <p>{author.description}</p>
            </div>
            <div class="border rounded-xl mr-auto p-2.5">
              <a
                target="_blank"
                rel="noopener noreferrer"
                aria-label="Improwised Technologies Pvt. Ltd."
                href={author.linkedin}
              >
                <Linkedin width="24" height="24" astro-icon="social/linkedin" />
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>

    <section class="py-10 md:py-20">
      <div class="container">
        <Badge class="mb-10" variant="outline"
          ><CircleUserRound
            width="16"
            height="16"
            class="mr-1 w-[16px]"
          />Featured Blogs</Badge
        >
        <div
          class="grid grid-cols-3 max-md:grid-cols-1 max-lg:grid-cols-2 gap-8"
        >
          {
            recommendedBlogs.map((blog, index) => (
              <Card.Root class="group overflow-hidden shadow-nav flex flex-col justify-between bg-card-bg border-1 border-card-border transition-transform duration-500">
                <Card.Header class="md:p-0 text-center bg-[#f0f0f0] dark:bg-[#3a3b3f69]">
                  <Image
                    alt="feature"
                    class="w-full object-contain sm:h-[250px] md:h-[300px] transition-all duration-200  group-hover:scale-105"
                    decoding="async"
                    loading="lazy"
                    src={blog.data.image}
                  />
                </Card.Header>
                <Card.Content class="">
                  <p class="mb-2 font-manrope text-[#A3A3A3] text-[16px] leading-[24px] tracking-[16%] uppercase">
                    {formatDate(blog.data.publishDate)}
                  </p>
                  <Card.Title class="text-[20px] text-fifth-color font-manrope font-bold leading-[24px] tracking-tight">
                    <a href={BASE_URL + "/blog/" + blog.data.slug + "/"}>
                      {blog.data.title}
                    </a>
                  </Card.Title>
                </Card.Content>
                <Card.Footer>
                  <div class="flex gap-x-2 items-center">
                    {authors
                      .filter(
                        (author) => author.data.title === blog.data.author
                      )
                      .map((author) => (
                        <div>
                          <Image
                            alt="author-profile"
                            class="rounded-full border aspect-square object-cover object-top"
                            width={56}
                            height={56}
                            src={author.data.image}
                          />
                        </div>
                      ))}
                    <p class="font-semibold text-fifth-color text-[18px] tracking-tight">
                      By {blog.data.author}
                      <br />
                      <span class="font-normal text-fourth-color text-[16px] leading-[18px] tracking-tight">
                        Improwised Technologies Pvt. Ltd.
                      </span>
                    </p>
                  </div>
                </Card.Footer>
              </Card.Root>
            ))
          }
        </div>
      </div>
    </section>
    <CTASection />
  </main>
</Layout>
<style>
  .bg-image {
    background-size: cover, contain;
    background-position: center, center;
    background-repeat: no-repeat, no-repeat;
  }
  div.no-inherit,
  div.no-inherit * {
    all: revert;
  }
</style>

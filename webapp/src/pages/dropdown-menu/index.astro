---
import "$lib/styles/app.css";
import { BASE_URL } from "$lib/consts";
const title = "Dropdown";
const description =
  "Displays a menu to the user — such as a set of actions or functions — triggered by a button.";

import Dropdown from "./_Dropdown.svelte";
import Layout from "src/layouts/Layout.astro";
---

<Layout
  title={title}
  description={description}
  className="bg-accordion-brand-surface-1"
>
  <main
    class="text-accordion-brand-text-1 mt-[10vh] mx-auto flex max-w-[90%] flex-col items-center text-base sm:mt-[25vh] sm:w-prose"
  >
    <div class="w-full min-w-full bg-white rounded-lg shadow-xl">

      <h5 class="p-8 inline-block font-bold">Dropdown click to open :</h5>
      <Dropdown client:load />
      <br><br><a href=`${BASE_URL}/` class="p-8">Back to home</a><br><br>
    </div>
  </main>
</Layout>
